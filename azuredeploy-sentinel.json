{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {},
  "parameters": {
    "sentinelName": {
      "type": "string",
      "defaultValue": "sentinel"
    },
    "resourceNaming": {
      "type": "string",
      "defaultValue": "Append autogenerated value to Sentinel Name",
      "allowedValues": [
        "Append autogenerated value to Sentinel Name",
        "Use Sentinel Name parameter as workspace name without suffix"
      ]
    },
    "retentionInDays": {
      "type": "int",
      "defaultValue": 90,
      "maxValue": 730,
      "minValue": 30
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "workspaceName": "[if(equals(parameters('resourceNaming'), 'Append autogenerated value to Sentinel Name'), format('{0}-{1}', parameters('sentinelName'), uniqueString(resourceGroup().id)),parameters('sentinelName'))]",
    "solutionName": "[format('SecurityInsights({0})', variables('workspaceName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2020-08-01",
      "name": "[variables('workspaceName')]",
      "location": "[variables('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": "[parameters('retentionInDays')]"
      }
    },
    {
      "type": "Microsoft.OperationsManagement/solutions",
      "apiVersion": "2015-11-01-preview",
      "name": "[variables('solutionName')]",
      "location": "[variables('location')]",
      "properties": {
        "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName'))]"
      },
      "plan": {
        "name": "[variables('solutionName')]",
        "publisher": "Microsoft",
        "product": "OMSGallery/SecurityInsights",
        "promotionCode": ""
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName'))]"
      ]
    },
    {
      "type": "Microsoft.ManagedServices/registrationDefinitions",
      "apiVersion": "2020-02-01-preview",
      "name": "[guid('Managed Detection and Response')]",
      "plan": {
        "name": "mdr",
        "product": "xdr",
        "publisher": "amestofortytwoas1653635920536",
        "version": "1.0.0"
      },
      "properties": {
        "registrationDefinitionName": "Managed Detection and Response",
        "description": "",
        "managedByTenantId": "ebad9241-2387-4155-8952-c8d8718bf80c",
        "authorizations": [
          {
            "principalId": "792a3ae4-85dd-4b80-a793-ce8caf259e44",
            "principalIdDisplayName": "Contributors",
            "roleDefinitionId": "b24988ac-6180-42a0-ab88-20f7382dd24c",
            "delegatedRoleDefinitionIds": []
          },
          {
            "principalId": "3f5edfd8-333e-4efa-b763-3b9421ff52e1",
            "principalIdDisplayName": "Incident Response Team",
            "roleDefinitionId": "b24988ac-6180-42a0-ab88-20f7382dd24c",
            "delegatedRoleDefinitionIds": []
          },
          {
            "principalId": "e80ca1aa-dfdc-4a39-be4e-cb33a713ca48",
            "principalIdDisplayName": "Operators",
            "roleDefinitionId": "b24988ac-6180-42a0-ab88-20f7382dd24c",
            "delegatedRoleDefinitionIds": []
          }
        ],
        "eligibleAuthorizations": []
      }
    },
    {
      "type": "Microsoft.ManagedServices/registrationAssignments",
      "apiVersion": "2019-09-01",
      "name": "[guid('Managed Detection and Response')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', guid('Managed Detection and Response'))]"
      ],
      "properties": {
        "registrationDefinitionId": "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', guid('Managed Detection and Response'))]"
      }
    }
  ]
}
